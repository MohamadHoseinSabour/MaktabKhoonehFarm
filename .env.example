SCRAPER_REQUEST_DELAY_SECONDS=1

# AI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-3-5-sonnet-20241022
AI_BATCH_SIZE=20

# Notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000